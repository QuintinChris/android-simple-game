<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameEmulator">

    <TextView
        android:id="@+id/emulatorLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Game Emulator"
        android:textAlignment="center"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Player 1:"
        android:textSize="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvP1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/labelP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="193dp"
        android:text="Player 2:"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnP1Wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="52dp"
        android:text="Player 1 Wins!"
        app:layout_constraintStart_toEndOf="@+id/labelP2"
        app:layout_constraintTop_toBottomOf="@+id/labelP2" />

    <Button
        android:id="@+id/BtnP2Wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Player 2 Wins!"
        app:layout_constraintStart_toStartOf="@+id/BtnP1Wins"
        app:layout_constraintTop_toBottomOf="@+id/BtnP1Wins" />

    <Button
        android:id="@+id/BtnTie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="20dp"
        android:text="It's a Tie!"
        app:layout_constraintEnd_toEndOf="@+id/BtnP2Wins"
        app:layout_constraintTop_toBottomOf="@+id/BtnP2Wins" />

    <TextView
        android:id="@+id/tvP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:text="TextView"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/labelP2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="TextView"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/tvP1"
        app:layout_constraintTop_toBottomOf="@+id/tvP1" />


</android.support.constraint.ConstraintLayout>

